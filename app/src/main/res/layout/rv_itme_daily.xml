<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30px"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_margin="15px"
            android:layout_width="90px"
            android:layout_height="90px" />
        <TextView
            android:id="@+id/tv_user_name"
            android:text="超级扎心的视频"
            android:textColor="#000"
            android:textSize="36px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:text="超级扎心的视频"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginBottom="15px"
        android:textColor="#000"
        android:textSize="45px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cn.jzvd.JzvdStd
        android:id="@+id/jz_player"
        android:layout_width="match_parent"
        android:layout_height="600px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_marginLeft="30px"
            android:scaleType="fitCenter"
            android:background="@mipmap/img_like"/>
        <TextView
            android:id="@+id/tv_like_num"
            android:text="1000"
            android:textSize="38px"
            android:textColor="#a6a6a6"
            android:layout_marginLeft="9px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_unlike"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/img_unlike"/>
        <TextView
            android:id="@+id/tv_unlike_num"
            android:text="1000"
            android:textSize="38px"
            android:textColor="#a6a6a6"
            android:layout_marginLeft="9px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_talk"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/img_talk"/>
        <TextView
            android:id="@+id/tv_talk_num"
            android:text="1000"
            android:textSize="38px"
            android:textColor="#a6a6a6"
            android:layout_marginLeft="9px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_marginLeft="380px"
            android:background="@mipmap/img_share"/>
        <TextView
            android:id="@+id/tv_share_num"
            android:text="1000"
            android:textSize="38px"
            android:layout_marginLeft="9px"
            android:textColor="#a6a6a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>